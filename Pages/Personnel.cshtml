@page
@model PhoneDirectory.Pages.Personnel
@{
    Layout  = "_DirectoryLayout.cshtml";
}

@{
    ViewData["Title"] = "Employees";
}

<h1>Personnel</h1>

<h2>@Model.department</h2>

<form asp-page="./Personnel" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="hidden" name="id" value="@Model.CurrentDepartmentID"/>
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            
        </p>
    </div>
</form>
<div><a href="./Personnel/?id=@Model.CurrentDepartmentID">Back to full List</a></div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FirstName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Employee[0].Department.DepartmentName)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Phone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Ext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Phone2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @* <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
<div>| <a asp-page="./Index" >Departments</a> |</div>