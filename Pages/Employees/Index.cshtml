@page
@model PhoneDirectory.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Personnel";
}

<h1>Personnel</h1>
<table>
<tr><td>
    <form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="hidden" name="SearchType" value="name"/>
            <input type="text" name="SearchString" value="@Model.CurrentFilterName" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
        </p>
    </div>
</form>
</td><td>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by phone or ext:
            <input type="hidden" name="SearchType" value="phone"/>
            <input type="text" name="SearchString" value="@Model.CurrentFilterPhone" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            
        </p>
    </div>
</form>
</tr>
</table>
<p>
    <a asp-page="Create" class="btn btn-primary">Add New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Department.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Phone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Ext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Phone2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-page="./Index" class="btn btn-primary">Back to full List</a>

