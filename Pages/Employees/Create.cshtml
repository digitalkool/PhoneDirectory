@page
@model PhoneDirectory.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add New</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Department" class="control-label"></label>
                <select asp-for="Employee.DepartmentID" class="form-control"
                        asp-items="@Model.DepartmentNameSL">
                        <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Employee.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Title" class="control-label"></label>
                <select asp-for="Employee.Title" class="form-control"
                        asp-items="@Model.TitlesList">
                        <option value="">-- Select Title --</option>
                </select>
                <span asp-validation-for="Employee.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Phone1" class="control-label"></label>
                <input asp-for="Employee.Phone1" class="form-control" />
                <span asp-validation-for="Employee.Phone1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Phone2" class="control-label"></label>
                <input asp-for="Employee.Phone2" class="form-control" />
                <span asp-validation-for="Employee.Phone2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Ext" class="control-label"></label>
                <input asp-for="Employee.Ext" class="form-control" />
                <span asp-validation-for="Employee.Ext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Notes" class="control-label"></label>
                <textarea asp-for="Employee.Notes" class="form-control"></textarea>
                <span asp-validation-for="Employee.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
